include ../mixins/icons

.main
  .control-group
    button#fullscreen-button.icon-button.icon-button--small
      +svg-icon.red.big(svg-icon-name='fullscreen')
    button#settings-button.icon-button.icon-button--small
      +svg-icon.red.big(svg-icon-name='settings')

  canvas#confetti-canvas.confetti

  #lucky-draw
    .title
      //- Pug loader currently does not handle webpack alias so we will use relative path here
      include ../assets/images/title.svg

    .slots-container
      .slot-group
        .slot-text
          p Vocal

        .slot
          .slot__outer
            .slot__inner
              .slot__shadow
                #reel.reel

      .slot-group
        .slot-text
          p Guitar

        .slot
          .slot__outer
            .slot__inner
              .slot__shadow
                #genrereel.genrereel
            
      .slot-group
        .slot-text
          p Keyboard

        .slot
          .slot__outer
            .slot__inner
              .slot__shadow
                #stylereel.stylereel

    .slots-container
      .slot-group
        .slot-text
          p Bass

        .slot
          .slot__outer
            .slot__inner
              .slot__shadow
                #bassreel.bassreel

      .slot-group
        .slot-text
          p Drum

        .slot
          .slot__outer
            .slot__inner
              .slot__shadow
                #drumreel.drumreel

    .solid-button-box
      button#draw-button.solid-button Draw!

  #settings.settings
    #settings-panel.settings__panel
      div.settings__panel__group
        h1.settings__title Settings
        div.input-group
          label.input-label(for="song-title-list") Vocal List
          textarea.input-field.input-field--textarea(rows="8" placeholder="Separate each name by line break" id="name-list")

          label.input-label(for="genre-list") Guitar List
          textarea.input-field.input-field--textarea(rows="8" placeholder="Separate each name by line break" id="genre-list")

          label.input-label(for="style-list") Keyboard List
          textarea.input-field.input-field--textarea(rows="8" placeholder="Separate each name by line break" id="style-list")

          label.input-label(for="bass-list") Bass List
          textarea.input-field.input-field--textarea(rows="8" placeholder="Separate each name by line break" id="bass-list")

          label.input-label(for="drum-list") Drum List
          textarea.input-field.input-field--textarea(rows="8" placeholder="Separate each name by line break" id="drum-list")

        div.input-group.input-group--2-column
          label.input-label(for="remove-from-list") Remove winner from list
          label.input--switch
            input(type="checkbox" checked="true" id="remove-from-list")
            span.slider

        div.input-group.input-group--2-column
          label.input-label(for="enable-sound") Enable sound effect
          label.input--switch
            input(type="checkbox" checked="true" id="enable-sound")
            span.slider
      div.settings__panel__group
        button#settings-save.solid-button.solid-button Save
        button#settings-close.solid-button.solid-button--danger Discard and close